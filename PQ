Analyst :=
VAR ReportKey =
    COALESCE (
        SELECTEDVALUE ( 'Report'[Report Key] ),
        SELECTEDVALUE ( Activity[Report Key] )
    )
VAR InvStaffKey =
    CALCULATE (
        MAX ( Inventory[Staff Key] ),
        REMOVEFILTERS ( Inventory ),         -- clear context from Activity
        Inventory[Report Key] = ReportKey
    )
RETURN
CALCULATE (
    MAX ( Staff[Report Analyst] ),
    Staff[Staff Key] = InvStaffKey
)
